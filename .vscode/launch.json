{
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (type in script name)",
            "cwd": "${workspaceFolder}",
            "program": "${command:AskForScriptName}",
            "args": []
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (select script from list of sh files)",
            "cwd": "${workspaceFolder}",
            "program": "${command:SelectScriptName}",
            "args": []
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (init_debian)",
            "terminalKind": "integrated",
            "cwd": "${workspaceFolder}",
            // "program": "${workspaceFolder}/bin/deb/init_debian.sh",
            "program": "${workspaceFolder}/bin/cos/init_centos.sh",
            "args": [],
            "env": {
                "DEBUG": "1"
            }
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (update_env)",
            "cwd": "${workspaceFolder}",
            // "program": "${workspaceFolder}/lib/update_env.sh",
            "program": "${workspaceFolder}/lib/python_install.sh",
            "args": [],
            "env": {
                "DEBUG": "1"
            }
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (i18n update)",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bin/i18n.sh",
            "args": [
                "--lang=zh",
                "bin/init_main.sh"
            ],
            "env": {
                "DEBUG": "1"
            }
            // ,
            // "pathBash": "/bin/bash", // 确保指向正确的bash路径
            // "showDebugOutput": true, // 增加这一行来查看更多调试信息
            // "trace": true
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (hash_util)",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/lib/hash_util.sh",
            "args": [],
            "env": {
                "DEBUG": "1"
            }
        },
        {
            "type": "debugpy",
            "name": "Python: 启动 i18n.py",
            "request": "launch",
            "program": "${workspaceFolder}/python/i18n.py",
            "args": [
                //"add",
                //"del",
                // "-y",
                // "--lang=ko fr",
                //"--file=bin/i18n.sh bin/init_main.sh",
                "--lang=zh en",
                // "--lang=en",
                // "--debug"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "debugpy",
            "name": "Python: 启动 lang_util.py",
            "request": "launch",
            "program": "${workspaceFolder}/python/lang_util.py",
            "args": [
                "--file=bin/init_main.sh bin/i18n.sh",
                "-lzh en",
                "--debug"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "debugpy",
            "name": "Python: 启动 hash_util.py",
            "request": "launch",
            "program": "${workspaceFolder}/python/hash_util.py",
            "args": [
                "--debug"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "debugpy",
            "name": "Python: 启动 ast_parser.py",
            "request": "launch",
            "program": "${workspaceFolder}/python/ast_parser.py",
            "args": [
                "bin/init_main.sh",
                "bin/i18n.sh"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "debugpy",
            "name": "Python: 启动 msg_handler.py",
            "request": "launch",
            "program": "${workspaceFolder}/python/msg_handler.py",
            "args": [
                "-s7",
                "-ie",
                "bin/i18n.sh",
                "bin/init_main.sh",
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "debugpy",
            "name": "Python: 启动 myshell.py",
            "request": "launch",
            "program": "${workspaceFolder}/python/myshell.py",
            "args": [
                // "sh_install_pip",
                // "sh_check_ip",
                // ""
                "sh_update_source",
                // "debian",
                // "ubuntu",
                // "centos",
                "opensuse",
                // "arch",
                "CN"
            ],
            "env": {
                "DEBUG": "1"
            },
            "console": "integratedTerminal"
        }
    ]
}